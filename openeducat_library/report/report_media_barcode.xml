<odoo>
    <data>
        <template id="report_media_barcode">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br/><br/><br/><br/>
                            <h3><strong>Media : <t t-esc="o.name"/></strong></h3><br/>
                            <table class="table table-bordered">
                                <thead>
                                    <th class="text-center">Media Unit</th>
                                    <th class="text-center">Barcode</th>
                                </thead>
                                <tbody>
                                    <tr class="text-center" t-foreach="o.unit_ids" t-as="unit">
                                        <td  style="vertical-align: middle; font-size: 12px;">
                                            <span t-if="unit.name"><span t-field='unit.name'/></span>
                                        </td>
                                        <td style="padding:10px 0px 10px 0px;">
                                            <span>
                                                <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', unit.barcode, 300, 40)"/>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/><br/>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
