<openerp>
    <data>

        <record id="op_student_user_create_view" model="ir.ui.view">
            <field name="name">wizard.op.student.form</field>
            <field name="model">wizard.op.student</field>
            <field name="arch" type="xml">
                <form string="Create Users">
                	 <p class="oe_grey">
                       Create User(s) for Selected Student(s)</p>
                    <footer>
                        <button string="Create Users" name="create_user" type="object" default_focus="1" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_student_user_create_view"
            multi="True" name="Create Users"
            res_model="wizard.op.student" src_model="op.student"
            view_mode="form" target="new" view_type="form" />
   </data>
 </openerp>
      
