<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Jump to website after theme installation ========================================================================== -->
    <data noupdate="1">
        <record id="base.open_menu" model="ir.actions.todo">
            <field name="action_id" ref="website.action_website"/>
            <field name="state">open</field>
        </record>
    </data>

    <data>
        <!-- SCSS ========================================================================== -->
        <template id="less" inherit_id="website.assets_frontend"
                  active="True" priority="1">
            <xpath expr="." position="inside">
                <link href="/openeducat_core/static/src/scss/main.scss"
                      rel="stylesheet" type="text/css"/>
            </xpath>
        </template>

        <!-- JS ========================================================================== -->

        <template id="assets_editor" inherit_id="website.assets_editor"
                  name="Editor assets">
            <xpath expr="." position="inside">
            </xpath>
        </template>
        <template id="assets_backend" name="Web Settings Dashboard Ext Assets"
                  inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript"
                        src="/openeducat_core/static/src/js/dashboard_ext.js"></script>
            </xpath>
        </template>

    </data>
</odoo>
