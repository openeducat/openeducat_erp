<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_student_bonafide">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <br></br>
                            <br></br>
                            <br></br>
                            <div class="text-center mt16">
                                <h4>
                                    <strong>Bonafide Certificate</strong>
                                </h4>
                            </div>
                            <br></br>
                            <table>
                                <tbody class="justify-content-center" style="font-size: 14px;">
                                    <tr>
                                        <td>This is to certify that
                                            <span t-raw="'%s' % o.title.name if o.title.name else ''"/>
                                            <strong>
                                                <u>
                                                    <span t-raw="'%s' % o.name if o.name else ''"/>
                                                </u>
                                            </strong>
                                            <font color="white"></font>
                                            is / was a bonafide student of this school / college studying in
                                            <strong>
                                                <u>
                                                    <span t-raw="'%s' % o.course_detail_ids[0].course_id.name if o.course_detail_ids else ''"/>
                                                </u>
                                            </strong>
                                            Year
                                            <strong>(
                                                <u>
                                                    <span t-raw="'%s' % o.course_detail_ids[0].batch_id.name if o.course_detail_ids else ''"/>
                                                </u>
                                                ).
                                            </strong>
                                            His / Her birthday as recorded in the General Register of the school /
                                            college is
                                            <strong>(
                                                <u>
                                                    <span t-esc="o.birth_date" t-options="{'widget':'date'}"/>
                                                </u>
                                                ).
                                            </strong>
                                            To the best of my knowledge, he / she bears a Good Moral character.
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                            <br></br>
                            <br></br>
                            <br></br>
                            <table width="100%">
                                <tbody>
                                    <tr>
                                        <td>
                                            <b>DATE:</b>
                                            <span t-esc="time.strftime('%Y-%m-%d')" t-options="{'widget':'datetime'}"/>
                                        </td>
                                        <td class="text-center">
                                            <b>PRINCIPAL</b>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
