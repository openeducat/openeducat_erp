<odoo>
    <data>
        <template id="student_attendance_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <br></br>
                        <br></br>
                        <br></br>
                        <br></br>
                        <div class="text-center">
                            <h3><strong>Student Attendance Detail</strong></h3>
                        </div>
                        <br/>
                        <div class="text-center">
                            <strong>From Date: <span t-esc="from_date" /></strong>
                            to
                            <strong>To Date: <span t-esc="to_date" /></strong>
                        </div>
                        <br></br>
                        <div class="text-left">
                            <b>Student Name :</b>
                            <span t-esc="get_student_name" />
                        </div>
                        <br/>
                        <table class="table table-bordered">
                            <thead class="text-center" style="background-color:#eeeeee; font-size:14px; font-weight:600;">
                                <th class="text-center">Date</th>
                                <th class="text-center">Remark</th>
                            </thead>
                            <tbody class="text-center" style="font-size:12px;">
                                <t t-foreach="get_data" t-as="obj">
                                    <tr t-foreach="obj['line']" t-as="l">
                                        <td class="text-center">
                                            <span t-esc="l['absent_date']" />
                                        </td>
                                        <td class="text-center">
                                            <span t-esc="l['remark']" />
                                        </td>
                                    </tr>
                                </t>
                                <tr t-foreach="get_data" t-as="obj">
                                    <td class="text-center">
                                        <b>Total Absence</b>
                                    </td>
                                    <td class="text-center">
                                        <b>
                                            <span t-esc="obj['total']" />
                                        </b>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
