<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_student_form_fees_inherit" model="ir.ui.view">
            <field name="name">op.student.form.fees.inherit</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form" />
            <field name="priority" eval="9" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image']" position="before">
                    <button type="object"
                        class="oe_right oe_stat_button"
                        id="invoice_button"
                        icon="fa-pencil-square-o"
                        name="action_view_invoice"
                        groups="openeducat_core.group_op_back_office">
                        <div><strong><field name="total_invoiced" widget="monetary"/></strong><br/>Invoiced</div>
                    </button>
                </xpath>
                <xpath expr="//page[@name='educational']" position="inside">
                    <button string="Generate Fees" class="oe_highlight" type="object" name="generate_fees"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Fees Collection Details">
                        <field name="fees_detail_ids" readonly="0" 
                               groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin">
                            <tree string="Fees Collection Details"
                                editable="top">
                                <field name="reference"/>
                                <field name="fees_line_id"
                                    invisible="1" />
                                <field name="date" />
                                <field name="amount" />
                                <field name="product_id"
                                    invisible="1" />
                                <field name="invoice_id"
                                    invisible="1" />
                                <field name="state" />
                                <field name="invoice_state" />
                                <button string="Create Invoice"
                                    states="draft" type="object" name="get_invoice"
                                    groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin" />
                                <button string="View Invoice"
                                    groups="openeducat_core.group_op_back_office,openeducat_core.group_op_back_office_admin"
                                    states="invoice" type="object"
                                    name="action_get_invoice" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
        <record id="view_op_student_fees_treeview" model="ir.ui.view">
            <field name="name">op.student.fees.treeview</field>
            <field name="model">op.student.fees.details</field>
            <field name="arch" type="xml">
                <tree string="Student Fees">
                    <field name="reference"/>
                    <field name="student_id"/>
                    <field name="fees_line_id"/>
                    <field name="invoice_id"/>
                    <field name="amount"/>
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="state"/>
                    <field name="invoice_state"/>
                </tree>
            </field>
        </record>
        
        <record id="view_op_student_fees_search" model="ir.ui.view">
            <field name="name">op.student.fees.search</field>
            <field name="model">op.student.fees.details</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Student">
                    <field name="reference" />
                    <field name="fees_line_id" />
                    <field name="student_id" />
                    <field name="date" />
                    <field name="product_id" />
                    <field name="state" />
                    <field name="invoice_state" />
                    <field name="date" />
                </search>
            </field>
        </record>

        <record id="view_op_student_fees_form" model="ir.ui.view">
            <field name="name">op.student.fees.form</field>
            <field name="model">op.student.fees.details</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Student Fees">
                	<notebook colspan="4" name="student_fees_notebook">
                		<group cols="2" colspan="2">
                			<field name="reference"/>
                			<field name="student_id"/>
                		</group>
                		<page name="account_info" string="Account">
                			<group cols="2" colspan="2">
	                        	<field name="fees_line_id"/>
	                        	<field name="invoice_id"/>
	                        	<field name="amount"/>
	                        	<field name="date"/>
	                        	<field name="product_id"/>
	                        	<field name="state"/>
	                        	<field name="invoice_state"/>
                        	</group>
                        </page>
                	</notebook>
                </form>
            </field>
        </record>
                      
        <record model="ir.actions.act_window" id="act_open_op_student_fee_view">
            <field name="name">Student Fees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.student.fees.details</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
