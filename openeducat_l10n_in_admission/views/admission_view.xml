<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="in_admission_form_view">
            <field name="name">op.admission.form</field>
            <field name="model">op.admission</field>
            <field name="inherit_id" ref="openeducat_admission.view_op_admission_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='family_business']" position="before">
                    <field name="religion_id" />
                </xpath>
                <xpath expr="//field[@name='fees']" position="after">
                    <field name="category_id" required="1" />
                </xpath>
                <xpath expr="//notebook/page[@name='educational_detail']/group" position="after">
                    <group string="GR Number" col="4" colspan="4">
	                    <newline />
	                    <field name="is_old_student" />
	                    <field name="gr_no_old" attrs="{'invisible':[('is_old_student','!=',True)]}" />
	                    <field name="gr_no" attrs="{'invisible':[('is_old_student','!=',False)]}" />     
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>