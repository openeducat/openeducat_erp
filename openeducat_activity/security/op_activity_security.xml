<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.rule" id="student_activity_log_rule">
            <field name="name">Student Activity Logs</field>
            <field name="model_id" ref="model_op_activity" />
            <field name="groups"
                eval="[(4, ref('openeducat_core.group_op_student'))]" />
            <field name="domain_force">['|', ('student_id.user_id','=',user.id), ('student_id.user_id','in',user.child_ids.ids)]</field>
        </record>

        <record model="ir.rule" id="general_activity_log_rule">
            <field name="name">General Activity Logs</field>
            <field name="model_id" ref="model_op_activity" />
            <field name="groups"
                eval="[(4, ref('openeducat_core.group_op_faculty'))]" />
            <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>