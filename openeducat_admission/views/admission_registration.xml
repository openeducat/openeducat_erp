<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_course_register_tree" model="ir.ui.view">
            <field name="name">op.admission.tree</field>
            <field name="model">op.admission</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Registration">
                    <field name="title" />
                    <field name="name" />
                    <field name="middle_name" />
                    <field name="last_name" />
                    <field name="application_number" />
                    <field name="admission_date" />
                    <field name="application_date" />
                    <field name="birth_date" />
                    <field name="course_id" />
                    <field name="batch_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>
        <record id="view_op_course_register_form" model="ir.ui.view">
            <field name="name">op.admission.form</field>
            <field name="model">op.admission</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Registration">
                    <header groups="base.group_user">
                        <button name="confirm_in_progress" states="draft" string="Confirm"
                            type="object" class="oe_highlight"/>
                        <button name="enroll_student" states="confirm" string="Enroll"
                            type="object" class="oe_highlight"/>
                        <button name="confirm_rejected" states="payment_process,fees_paid,,pending" string="Reject"
                            type="object" />
                        <button name="confirm_pending" states="fees_paid" string="Pending"
                            type="object" />
                        <button name="confirm_cancel" states="draft,confirm" string="Cancel"
                            type="object" />
                        <button name="confirm_to_draft" states="pending,reject,cancel" string="Set to Draft"
                            type="object" />
                        <button name="open_student" states="done" string="Open Student Profile"
                            type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <field name="is_student" invisible="1"/>
                            <label string="Student"/>
                            <field name="student_id" placeholder="Student" options="{'no_create_edit': True}"  attrs="{'required':[('is_student','=',True)],'invisible': [('is_student','=', False)]}"/>
                        </div>
                        <field name="photo" widget="image" class="oe_left oe_avatar" />
                        <div class="oe_title">
                            <h1>
                                <field name="title" placeholder="Title" style="width: 30%%" />
                            </h1>
                            <h1><table>
                                <tr>
                                <td><field name="name" placeholder="First Name" style="padding-right:10px" /></td>
                                <td><field name="middle_name" placeholder="Middle Name" style="padding-right:10px" /></td>
                                <td><field name="last_name" placeholder="Last Name" style="padding-right:10px" /></td>
                                </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="admission_detail" string="Registration Detail">
                                <group col="4" colspan="4">
                                    <field name="register_id" domain="[('state', 'in', ['application','admission','done'])]" widget="selection" />
                                    <field name="application_number" />
                                    <field name="application_date" />
                                    <field name="admission_date" />
                                    <field name="course_id" />
                                    <field name="batch_id" context="{'course_id': course_id,'get_parent_batch':1}" />
                                    <field name="fees" />
                                    <field name="due_date" />
                                    <field name="partner_id" invisible="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_op_course_register_search" model="ir.ui.view">
            <field name="name">op.admission.search</field>
            <field name="model">op.admission</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Registration">
                    <field name="name" />
                    <field name="middle_name" />
                    <field name="last_name" />
                    <field name="application_number" />
                    <field name="admission_date" />
                    <field name="application_date" />
                    <field name="birth_date" />
                    <field name="course_id" />
                    <field name="batch_id" />
                    <newline />
                    <group expand="0" string="Group By...">
                        <filter string="Last Name" domain="[]"
                            context="{'group_by':'last_name'}" />
                        <filter string="Admission Date" domain="[]"
                            context="{'group_by':'admission_date'}" />
                        <filter string="Application Date" domain="[]"
                            context="{'group_by':'application_date'}" />
                        <filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
                        <filter string="Batch" domain="[]" context="{'group_by':'batch_id'}" />
                        <filter string="Status" domain="[]" context="{'group_by':'state'}" />
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_op_course_register_graph">
            <field name="name">op.admission.graph</field>
            <field name="model">op.admission</field>
            <field name="arch" type="xml">
                <graph string="Course By Registration" type="pie">
                    <field name="course_id" />
                    <field name="nbr" operator="+" />
                </graph>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_course_register_view">
            <field name="name">Registration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.admission</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="search_view_id" ref="view_op_course_register_search" />
            <field name="domain">[]</field>
            <field name="context">{'default_is_student': 1}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_course_register_view_form">
            <field name="act_window_id" ref="act_open_op_course_register_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_course_register_form" />
        </record>
        <record model="ir.actions.act_window.view" id="act_open_op_course_register_view_tree">
            <field name="act_window_id" ref="act_open_op_course_register_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_op_course_register_tree" />
        </record>
    </data>
</odoo>
