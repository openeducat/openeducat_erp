<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_op_student_tree" model="ir.ui.view">
			<field name="name">op.student.tree</field>
			<field name="model">op.student</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Student">
					<field name="roll_number" />
					<field name="title" />
					<field name="name" />
					<field name="middle_name" />
					<field name="last_name" />
					<field name="blood_group" />
					<field name="category" />
					<field name="library_card" />
					<field name="emergency_contact" />
					<field name="id_number" />
					<field name="course_id" />
					<field name="batch_id" />
					<field name="standard_id" />
					<field name="nationality" />
					<field name="blood_group" />
					<field name="language" />
					<field name="religion" />
				</tree>
			</field>
		</record>
		<record id="view_op_student_form" model="ir.ui.view">
			<field name="name">op.student.form</field>
			<field name="model">op.student</field>
			<field name="context">{'show_address': 1}</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Student" version="7.0">
					<header>
						<span groups="openeducat_erp.group_op_back_office_admin,openeducat_erp.group_op_back_office">
							<button name="create_invoice" string="Create Invoice" type="object" icon="gtk-apply" />
						</span>
					</header>
					<sheet>
						<field name="photo" widget="image" class="oe_left oe_avatar" />
						<div class="oe_title">
							<h1>
								<field name="title" placeholder="Title" style="width: 30%%" />
							</h1>
							<h1>
								<field name="name" placeholder="First Name" style="width: 30%%" />
								<field name="middle_name" placeholder="Middle Name" style="width: 30%%" />
								<field name="last_name" placeholder="Last Name" style="width: 30%%" />
							</h1>
						</div>
						<separator colspan="4" string="Basic Information" />
						<group col="6" colspan="4">
							<field name="gender" />
							<field name="birth_date" />
							<field name="id_number" />
							<field name="roll_number" />
							<field name="alumni_boolean" />
						</group>
						<notebook colspan="4">
							<page string="Details">
								<separator colspan="4" string="Personal Detail" />
								<group col="4" colspan="4">
									<field name="category" />
									<field name="religion" />
									<field name="nationality" />
									<field name="language" />
									<field name="blood_group" />
									<field name="pan_card" />
									<field name="bank_acc_num" />
									<field name="visa_info" />
									<field name="user_id" />
									<field name="emergency_contact" context="{'show_address': 1}" options='{"always_reload": True}' />
								</group>
							</page>
							<page string="Educational">
								<separator colspan="4" string="Educational Detail" />
								<group col="4" colspan="4">
									<field name="course_id" />
									<field name="standard_id" />
									<field name="batch_id" />
									<field name="division_id" />
									<field name="roll_number_line" colspan="4" nolabel="1"
										context="{'default_course_id':course_id,
                                     'default_batch_id':batch_id,
                                     'default_standard_id':standard_id,
                                     'default_division_id':division_id}" />
								</group>
							</page>
							<page string="Assignments">
								<separator string="Assignment" colspan="4" />
								<field name="allocation_ids" colspan="4" nolabel="1" >
									<tree string="Assignment">
										<field name="name" />
											<field name="course_id" />
											<field name="standard_id" />
											<field name="division_id" />
											<field name="subject_id" />
											<field name="faculty_id" />
											<field name="reviewer" />
											<field name="marks" />
											<field name="type" />
											<field name="state" />
											<field name="issued_date" />
											<field name="submission_date" />
									</tree>
								</field>
							</page>
							<page string="Library">
								<separator string="Library Detail" colspan="4" />
								<field name="library_card_ids" colspan="4" nolabel="1" />
							</page>
							<page string="Alumni Details">
								<group colspan="4" col="4" attrs="{'invisible':[('alumni_boolean','=',False)]}">
								<separator string="Alumni Detail" colspan="4" />
									<field name="passing_year" />
									<field name="current_position" />
									<field name="current_job" />
									<field name="email" />
									<field name="phone" string="Phone"/>
								</group>
							</page>
							<page string="Placement Offer">
								<separator string="Placement Offer" colspan="4" />
								<field name="placement_line" colspan="4" nolabel="1" />
							</page>
							<page string="Activity Log">
								<separator string="Activity Log" colspan="4" />
								<field name="activity_log" colspan="4" nolabel="1" />
							</page>
							<page string="Parent">
								<separator string="Parent" colspan="4" />
								<field name="parent_ids" colspan="4" nolabel="1" />
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		<record id="view_op_student_search" model="ir.ui.view">
			<field name="name">op.student.search</field>
			<field name="model">op.student</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Student">
					<field name="name" />
					<field name="blood_group" />
					<field name="category" />
					<field name="id_number" />
					<field name="course_id" />
					<field name="batch_id" />
					<field name="standard_id" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Blood Group" domain="[]"
							context="{'group_by':'blood_group'}" />
						<filter string="Nationality" domain="[]"
							context="{'group_by':'nationality'}" />
						<filter string="Language" domain="[]" context="{'group_by':'language'}" />
						<filter string="Category" domain="[]" context="{'group_by':'category'}" />
						<filter string="Religion" domain="[]" context="{'group_by':'religion'}" />
						<filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
						<filter string="Batch" domain="[]" context="{'group_by':'batch_id'}" />
						<filter string="Standard" domain="[]"
							context="{'group_by':'standard_id'}" />
					</group>
				</search>
			</field>
		</record>
		<record model="ir.actions.act_window" id="act_open_op_student_view">
			<field name="name">Student</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.student</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_student_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>
		<record model="ir.actions.act_window.view" id="act_open_op_student_view_form">
			<field name="act_window_id" ref="act_open_op_student_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_op_student_form" />
		</record>
		<record model="ir.actions.act_window.view" id="act_open_op_student_view_tree">
			<field name="act_window_id" ref="act_open_op_student_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_op_student_tree" />
		</record>
	</data>
</openerp>